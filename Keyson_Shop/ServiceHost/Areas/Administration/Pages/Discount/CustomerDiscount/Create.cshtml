@model DiscountManagement.Application.Contract.CustomerDiscount.CustomerDiscountCreateModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">تعریف تخفیف</h4>
</div>

<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="StartDateS" class="control-label">تاریخ شروع</label>
                    <input class="form-control datetimePersian" asp-for="StartDateS">
                    <span asp-validation-for="StartDateS" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label" asp-for="EndDateS">تاریخ پایان</label>
                    <input class="form-control datetimePersian" asp-for="EndDateS">
                    <span asp-validation-for="EndDateS" class="error"></span>
                </div>
            </div>
            </div>
        <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label" asp-for="ProductId">محصول</label>
                        <select class="form-control" asp-for="ProductId" asp-items='new SelectList(Model.Products, "Id", "Name")'>
                            <option value="0">محصول ...</option>
                        </select>
                        <span asp-validation-for="ProductId" class="error"></span>
                    </div>
                </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label" asp-for="Discount">درصد تخفیف</label>
                    <input class="form-control" asp-for="Discount">
                    <span asp-validation-for="Discount" class="error"></span>
                </div>
            </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group no-margin">
                        <label asp-for="Reason" class="control-label">توضیحات</label>
                        <textarea class="form-control autogrow" asp-for="Reason"
                                  style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                        <span asp-validation-for="Reason" class="error"></span>
                    </div>
                </div>
            </div>
        </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>