@model InventoryManagement.Application.Contract.Inventory.InventoryReductionModel

@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">کاهش موجودی</h4>
</div>

<form asp-page="./Index" asp-page-handler="Reduction"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <input type="hidden" asp-for="InventoryId" />
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label" asp-for="Count">تعداد</label>
                    <input type="number" class="form-control" asp-for="Count" />
                    <span asp-validation-for="Count" class="error"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label" asp-for="Description">توضیحات</label>
                    <textarea class="form-control" asp-for="Description">

</textarea>
                    <span asp-validation-for="Description" class="error"></span>
                </div>
            </div>
        </div>
    </div>    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">کاهش موجودی</button>
    </div>
</form>